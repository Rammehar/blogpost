<%- include header.ejs %>

<main role="main">

        <!-- Main jumbotron for a primary marketing message or call to action -->
        <div class="jumbotron">
          <div class="container">
            <h3 class="display-3">New User Registration</h3>
            <p>Please fill the form below to register</p>
             
          </div>
        </div>
      
        <div class="container">
          <div class="card">
            <div class="card-body">
              <!-- Example row of columns -->
              <div class="row">
                  <div class="col-md-6 mx-auto">
                    <% if(msg.length > 0) {%>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                      <% for (var i = 0; i < msg.length; i++) { %>
                        <%= msg[i].msg %> <br/>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      <% } %>
                    </div>
                    <% } %>
                      <form action="/user/register" id="registrationform" class="form-horizontal" method="post"  role="form">
                        <div class="form-group">
                          <label for="">Full Name</label>
                          <input type="text" name="name" value="" class="form-control"  placeholder="Enter your Name">
                          <span class="text-danger"></span>
                      </div>
                          <div class="form-group">
                              <label for="">Email</label>
                              <input type="text" name="email" value="" class="form-control"  placeholder="Enter your email">
                              <span class="text-danger"></span>
                          </div>
                          <div class="form-group">
                            <label for="exampleFormControlInput1">Password</label>
                            <input type="password" name="password" class="form-control"  placeholder="Enter password">
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                          <label for="exampleFormControlInput1">Confirm Password</label>
                          <input type="text" name="confirm_password" class="form-control"  placeholder="Enter confirm password">
                          <span class="text-danger"></span>
                        </div> 
                        <div class="col text-center">
                          <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                      </form>
                  </div>
                </div>
            </div>
          </div>
         
      
          <hr>
      
        </div> <!-- /container -->
      
      </main>

      <%- include footer.ejs %>
