<%- include header.ejs %>

<main role="main">

        <!-- Main jumbotron for a primary marketing message or call to action -->
        <div class="jumbotron">
          <div class="container">
            <h5 class="display-3">Add New Post</h5>
            <p>here you can add new post</p>
             
          </div>
        </div>
      
        <div class="container">
          <div class="card">
            <div class="card-body">
              <!-- Example row of columns -->
              <div class="row">
                  <div class="col-md-6 mx-auto">
                
                    <%= msg %>
                  
                      <form action="/post/add/new" id="update_profile_form" class="form-horizontal" method="post"  role="form">
                        <div class="form-group">
                          <label for="">Post Title</label>
                          <input type="text" name="title" value="" class="form-control"  placeholder="Enter Post Title">
                          <span class="text-danger"></span>
                      </div>
                       
                        <div class="form-group">
                          <label for="">Description</label>
                          <textarea name="description" class="form-control"  placeholder="Enter Post Description"></textarea>

                          <span class="text-danger"></span>
                        </div> 
                        <div class="col text-center">
                          <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                      </form>
                  </div>
                </div>
            </div>
          </div>
         
      
          <hr>
      
        </div> <!-- /container -->
      
      </main>

      <%- include footer.ejs %>
